<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/campus_recruitment_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/campus_recruitment_circle_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.campusrecruitmentsystem.campus.MailActivity"
            android:exported="false" />
        <activity android:name="com.campusrecruitmentsystem.campus.AboutUsActivity"></activity>
        <activity android:name="com.campusrecruitmentsystem.campus.AppliedStudentsActivity" />
        <activity android:name="com.campusrecruitmentsystem.campus.JobDescriptionActivity" />
        <activity android:name="com.campusrecruitmentsystem.campus.AddNewJobActivity" />
        <activity
            android:name="com.campusrecruitmentsystem.campus.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.campusrecruitmentsystem.campus.dashboard.StudentDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.campusrecruitmentsystem.campus.dashboard.CompanyDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.campusrecruitmentsystem.campus.dashboard.AdminDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.campusrecruitmentsystem.campus.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.campusrecruitmentsystem.campus.MainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>